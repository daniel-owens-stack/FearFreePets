<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
  <apiVersion>64.0</apiVersion>
  <isExposed>true</isExposed>
  <masterLabel>FF Reload Page Component</masterLabel>
  <description>This component reloads the page when shown in a flow screen.</description>
  <targets>
    <target>lightning__FlowScreen</target>
    <target>lightningCommunity__Page</target>
    <target>lightningCommunity__Default</target>

  </targets>
  <targetConfigs>
    <targetConfig targets="lightning__FlowScreen">
      <property name="shouldReload" label="Reload the Page?" type="Boolean" role="inputOnly" />
      <property name="status" label="Status" type="String" role="outputOnly" />
    </targetConfig>
  </targetConfigs>
</LightningComponentBundle>