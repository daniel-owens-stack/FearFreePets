<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>61.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>B2B Guest Checkout Button</masterLabel>
    <targets>
        <target>lightningCommunity__Default</target>
        <target>lightningCommunity__Page</target>
        <target>lightning__AppPage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property label="Modal Heading Label" name="headingLabel" type="String" default="Sign In to Proceed to Checkout"/>
            <property label="Checkout Button Label" name="checkoutButton" type="String" default="Checkout"/>
            <property label="Flow API Name" name="flowApiName" type="String" default="B2B_Guest_User_Checkout"/>
            <property label="Flow Input Cart Id" name="cartId" type="String" default="{!Cart.Details.cartId}"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>