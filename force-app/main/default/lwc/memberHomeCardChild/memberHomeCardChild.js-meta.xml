<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata" fqn="memberHomeCardChild">
    <apiVersion>62.0</apiVersion>
    <isExposed>true</isExposed>

    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__HomePage</target>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>

    <targetConfigs>  
        <targetConfig targets="lightningCommunity__Default">
            <property name="cardTitle" type="String" default="Replace this title" label="Enter the title"/>
            <property name="cardDescription" type="String" default="replace this text" label="Enter the paragraph text"/>            
            <property name="cardLinkUrl" type="String" default="/store" label="Enter URL"/>
            <property name="openInNewTab" type="Boolean" default="false" label="Card Open in New Tab"/>
            <property name="cardColor" type="String" default="light_blue" label="enter class for background color"/>
            
        </targetConfig>        
    </targetConfigs>
   
</LightningComponentBundle>