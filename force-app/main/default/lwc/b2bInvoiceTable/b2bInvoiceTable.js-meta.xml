<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>61.0</apiVersion>
    <isExposed>true</isExposed>
	<masterLabel>B2B Invoice Table</masterLabel>
	<targets>
		<target>lightning__HomePage</target>
		<target>lightningCommunity__Page</target>
		<target>lightningCommunity__Default</target>
	</targets>
	<targetConfigs>
		<targetConfig targets="lightningCommunity__Default">
		  	<property name="recordId" type="String" default="{!recordId}"></property>
			<property name="labelInvoiceNumber" type="String" label="Invoice Number Label" default="Invoice Number"/>
			<property name="labelAmountCharged" type="String" label="Amount Charged Label" default="Amount Charged"/>
			<property name="labelBillingEmail" type="String" label="Billing Email Label" default="Billing Email"/>
            <property name="labelPeriod" type="String" label="Period Label" default="Period"/>
			<property name="labelCreatedDate" type="String" label="Created Date Label" default="Created Date"/>
			<property name="labelPaidDate" type="String" label="Paid Date Label" default="Paid Date"/>
			<property name="buttonLabelDownloadLink" type="String" label="Download Link Button Label" default="PDF"/>
			<property name="buttonLablePayNow" type="String" label="Pay Now Button Label" default="Pay Now"/>
			<property name="invoiceHeading" type="String" label="Invoice Heading" default="Invoices"/>
			<property name="noInvoicesMessage" type="String" label="No Invoices Message" default="Your account does not have any invoices to pay."/>
		</targetConfig>
	</targetConfigs>
</LightningComponentBundle>